{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        "sessionId": { ".validate": "newData.isString()" },
        "lastSeen": { ".validate": "newData.isNumber()" },
        "active": { ".validate": "newData.isBoolean()" }
      }
    },
    "tokens": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        "token": { ".validate": "newData.isString()" },
        "updatedAt": { ".validate": "newData.isNumber()" }
      }
    }
  }
} 